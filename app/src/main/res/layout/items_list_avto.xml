<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rr"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:id="@+id/liner_block">
    <TextView
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/nomer_avtobusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="310"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:lines="1"
        android:transitionName="nomeAvto"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView_name1"
            android:textColor="@android:color/black"
            android:lines="1"
            android:transitionName="name1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView_name2"
            android:textColor="@android:color/black"
            android:lines="1"
            android:transitionName="name2"/>
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rr"
    android:layout_marginTop="5dp"
    android:layout_weight="7"
    android:layout_marginLeft="2dp"
    android:id="@+id/liner_settings"
    android:gravity="center">

    <ImageButton
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/imageView"
        android:background="@drawable/settings1"
        android:src="@drawable/ic_more_vert_black_24dp" />
</LinearLayout>
</LinearLayout>